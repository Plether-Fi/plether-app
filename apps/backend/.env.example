# Plether API Backend Environment Variables
# Copy to .env and fill in your values

# Required: Ethereum RPC endpoint
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY

# Optional: Chain ID (default: 11155111 for Sepolia)
CHAIN_ID=11155111

# Optional: Server port (default: 3001)
PORT=3001

# Optional: CORS origins (space-separated, default: http://localhost:5173)
CORS_ORIGINS=http://localhost:5173

# Optional: PostgreSQL connection string (enables transaction history)
# If not set, history endpoints are disabled
DATABASE_URL=postgresql://localhost/plether

# Optional: Block to start indexing from (default: 0)
# Set to contract deployment block for faster initial sync
INDEXER_START_BLOCK=0
